{
  "name": "devcamp-boost-customize-template",
  "version": "1.0.0",
  "description": "devCamp Boost用のkintoneカスタマイズ開発テンプレート",
  "private": true,
  "main": "index.js",
  "scripts": {
    "build": "vite build",
    "upload": "kintone-customize-uploader ./customize-manifest.json",
    "start": "run-p -l 'build -- --watch' 'upload -- --watch'",
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "run-p -l lint:*",
    "lint:eslint": "eslint --ext .js,.ts ./",
    "lint:prettier": "prettier --check **/*.{json,md}",
    "fix": "run-p -l fix:*",
    "fix:eslint": "run-s 'lint:eslint -- --fix'",
    "fix:prettier": "run-s 'lint:prettier -- --write'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kintone/devCamp-Boost-customize-template.git"
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "kintone"
  ],
  "author": {
    "name": "Cybozu, Inc.",
    "url": "https://cybozu.co.jp"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/kintone/devCamp-Boost-customize-template/issues"
  },
  "homepage": "https://github.com/kintone/devCamp-Boost-customize-template#readme",
  "devDependencies": {
    "@cybozu/eslint-config": "^20.0.1",
    "@kintone/customize-uploader": "^7.0.2",
    "@kintone/dts-gen": "^7.0.3",
    "@types/node": "^20.3.2",
    "eslint": "^8.43.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.8",
    "typescript": "^5.1.3",
    "vite": "^4.3.9"
  }
}
